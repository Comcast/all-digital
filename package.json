{
  "name": "all-digital",
  "version": "0.0.1",
  "private": true,
  "homepage": "https://comcast.github.io/all-digital",
  "dependencies": {
    "adc-ui-components": "^2.6.0",
    "all-digital": "git+https://github.com/Comcast/all-digital.git#v3.0.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-jest": "^22.0.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "node-sass": "^4.11.0",
    "react": "^16.7.0",
    "react-app-polyfill": "^0.1.3",
    "react-dom": "^16.7.0",
    "react-router-dom": "^4.3.1",
    "react-scripts": "2.1.1",
    "react-test-renderer": "^16.7.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "verify": "CI=true npm run test && CI=true npm run build",
    "lint": "eslint './src/**/*.js'"
  },
  "eslintConfig": {
    "extends": [
      "airbnb",
      "plugin:jest/recommended"
    ],
    "env": {
      "browser": true,
      "node": true
    },
    "plugins": [
      "jest"
    ],
    "rules": {
      "react/prop-types": false,
      "react/jsx-filename-extension": false,
      "jsx-a11y/label-has-for": 0,
      "jsx-a11y/label-has-associated-control": [
        2,
        {
          "controlComponents": [
            "FormControl"
          ]
        }
      ]
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie < 11",
    "not op_mini all"
  ],
  "devDependencies": {},
  "jest": {
    "coverageReporters": [
      "text-summary",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 12,
        "branches": 7,
        "functions": 22,
        "lines": 17
      }
    },
    "collectCoverageFrom": [
      "!src/containers/Core/**/*.{js}",
      "!src/store/**/*.{js}",
      "src/**/*.{js}"
    ]
  }
}
